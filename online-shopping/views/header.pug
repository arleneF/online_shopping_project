nav.navbar.navbar-light.bg-faded.navbar-toggleable-md
  //- Button will appear for small screen size
  button.navbar-toggler.navbar-toggler-right(type='button' data-toggle='collapse' data-target='#navbarCollapse')
    span.navbar-toggler-icon

  a.navbar-brand(href='/') Home
  #navbarCollapse.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item
        a.nav-link(href='/items') Directory
      li.nav-item
        a.nav-link(href='/categories') Categories
      li.nav-item
        a.nav-link(href="http://localhost:9001") Chat
      li.nav-item
        a.nav-link(href='#') Forums

    form.form-inline(method='GET' action='/items/search')
      input.form-control.mr-sm-2(type='text' placeholder='Search' name='keyword' value=(keyword===undefined ? '' : keyword))
      button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search

    ul.navbar-nav
      if login
        li.nav-item
          a.nav-link(href='/profile') Profile
        li.nav-item
            a.nav-link(href='/transactions') Transactions
        li.nav-item
          a.nav-link(href='/logout') Log Out
      else
        li.nav-item
          a.nav-link(href='/signup') Sign up
        li.nav-item
          a.nav-link(href='/login') Login
