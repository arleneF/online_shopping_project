extends layout

block content
form(method = 'POST' action = '/signup')
	div.form-group
		lable(for = 'email') Email:
		input#name.form-control(type = 'email', placeholder = 'name@email.com' name = 'email')
	div.form-group
		lable(for = 'pw') Password:
		input#pw.form-control(type = 'password' name = 'password')