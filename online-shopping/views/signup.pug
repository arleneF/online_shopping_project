extends layout

block content
	.form
		form.signup-form(method = 'POST' action = '/signup')

			div.form-group
				label(for='fname') First Name:
			div.form-group
				input#fname.form-control(type='text', placeholder='first Name' name='fname')

			div.form-group
				label(for='lname') Last Name:
			div.form-group.input
				input#lname.form-control(type='text', placeholder='last Name' name='lname')

			div.form-group
				label(for = 'email') Email:
			div.form-group.input
				input#email.form-control(type = 'email', placeholder = 'name@email.com' name = 'email')

			div.form-group
				label(for = 'pw') Password:
			div.form-group
				input#pw.form-control(type = 'password' name = 'password')

			button.btn.btn-primary(type='submit') Sign up
			br
			br
			form.signup.signup-form.span4(action="/users/session", method="post")
				img(src="/images/facebook.png")
				a.btn-social.btn-dblue.btn-primary(href="/auth/facebook") Sign Up with Facebook
				br
				img(src="/images/github.png")
				a.btn-social.btn-dblue.btn-secondary(href="/auth/github") Sign Up with GitHub

		.error #{message}
